generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth"]
}

model User {
  id           String   @id @default(uuid())
  supabaseId   String   @unique
  email        String   @unique
  name         String?
  phone        String?
  address      String?
  role         String   @default("customer")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  orders       Order[]
  cart         Cart?

  @@index([email])
  @@index([role])
  @@schema("public")
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String    @unique
  description String?
  image       String?
  createdAt   DateTime  @default(now())
  products    Product[]
  @@schema("public")
}

model Product {
  id          String         @id @default(uuid())
  name        String
  slug        String         @unique
  description String
  price       Float
  currency    String         @default("LKR")
  category    Category       @relation(fields: [categoryId], references: [id])
  categoryId  String
  status      String         @default("active")
  stock       Int            @default(0)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  images      ProductImage[]
  variants    ProductVariant[]
  cartItems   CartItem[]
  orderItems  OrderItem[]

  @@index([categoryId])
  @@index([status])
  @@index([createdAt])
  @@schema("public")
}

model ProductVariant {
  id            String  @id @default(uuid())
  product       Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId     String
  sku           String  @unique
  name          String
  attributes    Json
  priceOverride Float?
  stock         Int
  @@schema("public")
}

model ProductImage {
  id        String  @id @default(uuid())
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  url       String
  alt       String?
  position  Int     @default(0)
  @@schema("public")
}

model Cart {
  id        String     @id @default(uuid())
  user      User?      @relation(fields: [userId], references: [id])
  userId    String?    @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     CartItem[]
  @@schema("public")
}

model CartItem {
  id        String  @id @default(uuid())
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId    String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  createdAt DateTime @default(now())
  
  @@unique([cartId, productId])
  @@schema("public")
}

model Order {
  id            String      @id @default(uuid())
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  orderNumber   String      @unique
  status        String      @default("pending")
  totalAmount   Float
  currency      String      @default("LKR")
  paymentMethod String      @default("cod")
  shippingAddress Json
  notes         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  items         OrderItem[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@schema("public")
}

model OrderItem {
  id        String  @id @default(uuid())
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  price     Float
  total     Float
  @@schema("public")
}

model SiteSettings {
  id              String   @id @default("default")
  storeName       String   @default("WebMall")
  tagline         String?  @default("Sri Lankan Fashion Accessories")
  description     String?  @default("Your premier destination for Sri Lankan fashion accessories.")
  logoUrl         String?
  contactEmail    String?  @default("webmalll.ik@gmail.com")
  contactPhone    String?  @default("+94 778973708")
  contactAddress  String?  @default("Colombo, Sri Lanka")
  facebookUrl     String?
  instagramUrl    String?
  twitterUrl      String?
  shippingBaseRate Float   @default(500)
  freeShippingThreshold Float @default(10000)
  updatedAt       DateTime @updatedAt

  @@schema("public")
}

model HeroBanner {
  id          String   @id @default(uuid())
  title       String
  subtitle    String?
  imageUrl    String
  ctaText     String?  @default("Shop Now")
  ctaLink     String?  @default("/products")
  position    Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@schema("public")
}
