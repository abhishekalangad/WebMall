generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

// --- Application Models (CamelCase for Client, Mapped to Snake_Case DB) ---
// Note: Foreign Keys are marked optional (?) to match existing database schema and prevent migration errors.

model User {
  id           String   @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  supabaseId   String   @unique @map("supabase_id") @db.Uuid
  email        String   @unique @map("email")
  name         String?  @map("name")
  phone        String?  @map("phone")
  address      String?  @map("address")
  birthday     String?  @map("birthday")
  profileImage String?  @map("profile_image")
  role         String   @default("customer") @map("role")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  
  cart       Cart?
  wishlist   Wishlist?
  orders     Order[]
  messages   Message[]
  reviews    Review[]
  couponUsage CouponUsage[]

  // Relation to Auth User (Supabase)

  @@map("users")
  @@schema("public")
}

model Category {
  id            String        @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  name          String        @unique @map("name")
  slug          String        @unique @map("slug")
  description   String?       @map("description")
  image         String?       @map("image")
  createdAt     DateTime      @default(now()) @map("created_at")
  
  products      Product[]
  subcategories Subcategory[]

  @@map("categories")
  @@schema("public")
}

model Subcategory {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  name        String   @map("name")
  slug        String   @map("slug")
  description String?  @map("description")
  image       String?  @map("image")
  categoryId  String   @map("category_id") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  products    Product[]
  
  @@unique([categoryId, slug])
  @@map("subcategories")
  @@schema("public")
}

model Product {
  id            String           @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  name          String           @map("name")
  slug          String           @unique @map("slug")
  description   String           @map("description")
  price         Decimal          @map("price") @db.Decimal(10, 2)
  currency      String           @default("LKR") @map("currency")
  categoryId    String?          @map("category_id") @db.Uuid
  subcategoryId String?          @map("subcategory_id") @db.Uuid
  status        String           @default("active") @map("status")
  stock         Int              @default(0) @map("stock")
  createdAt     DateTime         @default(now()) @map("created_at")
  updatedAt     DateTime         @updatedAt @map("updated_at")
  
  cartItems     CartItem[]
  wishlistItems WishlistItem[]
  orderItems    OrderItem[]
  category      Category?        @relation(fields: [categoryId], references: [id])
  subcategory   Subcategory?     @relation(fields: [subcategoryId], references: [id])
  images        ProductImage[]
  variants      ProductVariant[]
  reviews       Review[]

  @@map("products")
  @@schema("public")
}

model ProductVariant {
  id            String     @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  productId     String?    @map("product_id") @db.Uuid
  sku           String     @unique @map("sku")
  name          String     @map("name")
  attributes    Json       @map("attributes")
  priceOverride Decimal?   @map("price_override") @db.Decimal(10, 2)
  stock         Int        @map("stock")
  image         String?    @map("image")
  images        String[]   @default([]) @map("variant_images")
  
  product       Product?        @relation(fields: [productId], references: [id], onDelete: Cascade)
  cartItems     CartItem[]
  wishlistItems WishlistItem[]
  orderItems    OrderItem[]

  @@map("product_variants")
  @@schema("public")
}

model ProductImage {
  id        String  @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  productId String? @map("product_id") @db.Uuid
  url       String  @map("url")
  alt       String? @map("alt")
  position  Int     @default(0) @map("position")
  
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_images")
  @@schema("public")
}

model Cart {
  id        String     @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  userId    String?    @unique @map("user_id") @db.Uuid
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  
  user      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]

  @@map("carts")
  @@schema("public")
}

model CartItem {
  id                String          @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  cartId            String?         @map("cart_id") @db.Uuid
  productId         String?         @map("product_id") @db.Uuid
  variantId         String?         @map("variant_id") @db.Uuid
  variantName       String?         @map("variant_name")
  variantAttributes Json?           @map("variant_attributes")
  quantity          Int             @map("quantity")
  createdAt         DateTime        @default(now()) @map("created_at")
  
  cart              Cart?           @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product           Product?        @relation(fields: [productId], references: [id])
  variant           ProductVariant? @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId, variantId])
  @@map("cart_items")
  @@schema("public")
}

model Wishlist {
  id        String         @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  userId    String?        @unique @map("user_id") @db.Uuid
  createdAt DateTime       @default(now()) @map("created_at")
  updatedAt DateTime       @updatedAt @map("updated_at")
  
  user      User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     WishlistItem[]

  @@map("wishlists")
  @@schema("public")
}

model WishlistItem {
  id         String    @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  wishlistId String?   @map("wishlist_id") @db.Uuid
  productId  String?   @map("product_id") @db.Uuid
  variantId  String?   @map("variant_id") @db.Uuid
  createdAt  DateTime  @default(now()) @map("created_at")
  
  wishlist   Wishlist?        @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  product    Product?         @relation(fields: [productId], references: [id])
  variant    ProductVariant?  @relation(fields: [variantId], references: [id])

  @@unique([wishlistId, productId, variantId])
  @@map("wishlist_items")
  @@schema("public")
}

model Order {
  id              String      @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  userId          String?     @map("user_id") @db.Uuid
  orderNumber     String      @unique @map("order_number")
  status          String      @default("pending") @map("status")
  totalAmount     Decimal     @map("total_amount") @db.Decimal(10, 2)
  currency        String      @default("LKR") @map("currency")
  paymentMethod   String      @default("cod") @map("payment_method")
  shippingAddress Json        @map("shipping_address")
  notes           String?     @map("notes")
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")
  
  user            User?       @relation(fields: [userId], references: [id])
  items           OrderItem[]
  couponUsage     CouponUsage?

  @@map("orders")
  @@schema("public")
}

model OrderItem {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  orderId   String?  @map("order_id") @db.Uuid
  productId String?  @map("product_id") @db.Uuid
  quantity  Int      @map("quantity")
  price     Decimal  @map("price") @db.Decimal(10, 2)
  total     Decimal  @map("total") @db.Decimal(10, 2)
  variantId String?  @map("variant_id") @db.Uuid
  variantName String? @map("variant_name")
  
  order     Order?   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product? @relation(fields: [productId], references: [id])
  variant   ProductVariant? @relation(fields: [variantId], references: [id])

  @@map("order_items")
  @@schema("public")
}

model Review {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  rating    Int      @map("rating")
  comment   String?  @map("comment")
  productId String   @map("product_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@map("reviews")
  @@schema("public")
}

model Message {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  userId       String?  @map("user_id") @db.Uuid
  name         String   @map("name")
  email        String   @map("email")
  subject      String   @map("subject")
  message      String   @map("message")
  status       String   @default("new") @map("status")
  adminReply   String?  @map("reply")
  replyAt      DateTime? @map("replied_at")
  isReadByUser Boolean  @default(false) @map("is_read_by_user")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user         User?    @relation(fields: [userId], references: [id])

  @@map("contact_messages")
  @@schema("public")
}

model SiteSettings {
  id              String   @id @default("default") @map("id")
  storeName       String   @default("WebMall") @map("store_name")
  tagline         String?  @default("Sri Lankan Fashion Accessories") @map("tagline")
  description     String?  @default("Your premier destination for Sri Lankan fashion accessories.") @map("description")
  logoUrl         String?  @map("logo_url")
  contactEmail    String?  @default("webmalll.ik@gmail.com") @map("contact_email")
  contactPhone    String?  @default("+94 778973708") @map("contact_phone")
  contactAddress  String?  @default("Colombo, Sri Lanka") @map("contact_address")
  facebookUrl     String?  @map("facebook_url")
  instagramUrl    String?  @map("instagram_url")
  instagramUrl2   String?  @map("instagram_url_2")
  twitterUrl      String?  @map("twitter_url")
  shippingBaseRate Float   @default(500) @map("shipping_base_rate")
  freeShippingThreshold Float @default(10000) @map("free_shipping_threshold")
  headerNavigation Json?  @map("header_navigation")
  customerNavigation Json?  @map("customer_navigation")
  aboutGalleryImages String[] @default([]) @map("about_gallery_images")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("site_settings")
  @@schema("public")
}

model HeroBanner {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  title       String   @map("title")
  subtitle    String?  @map("subtitle")
  imageUrl    String   @map("image_url")
  ctaText     String?  @default("Shop Now") @map("cta_text")
  ctaLink     String?  @default("/products") @map("cta_link")
  position    Int      @default(0) @map("position")
  isActive    Boolean  @default(true) @map("is_active")
  showBadge   Boolean  @default(true) @map("show_badge")
  showTopRated Boolean @default(true) @map("show_top_rated")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("hero_banners")
  @@schema("public")
}

model Coupon {
  id            String   @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  code          String   @unique @map("code")
  discountType  String   @map("discount_type")
  discountValue Float    @map("discount_value")
  expiryDate    DateTime @map("expiry_date")
  usageLimit    Int      @default(100) @map("usage_limit")
  timesUsed     Int      @default(0) @map("times_used")
  minimumOrder  Float    @default(0) @map("minimum_order")
  status        String   @default("active")
  usageType     String   @default("unlimited") @map("usage_type") // "one_per_user", "unlimited", "user_specific"
  maxUsesPerUser Int     @default(1) @map("max_uses_per_user")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  usageHistory  CouponUsage[]

  @@map("coupons")
  @@schema("public")
}

model CouponUsage {
  id              String   @id @default(dbgenerated("uuid_generate_v4()")) @map("id") @db.Uuid
  couponId        String   @map("coupon_id") @db.Uuid
  userId          String?  @map("user_id") @db.Uuid
  userEmail       String   @map("user_email")  // Track by email to prevent account deletion bypass
  orderId         String?  @unique @map("order_id") @db.Uuid
  discountAmount  Float    @map("discount_amount")
  usedAt          DateTime @default(now()) @map("used_at")
  
  coupon          Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  user            User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  order           Order?   @relation(fields: [orderId], references: [id], onDelete: SetNull)
  
  @@index([couponId])
  @@index([userId])
  @@index([userEmail])
  @@map("coupon_usage")
  @@schema("public")
}


